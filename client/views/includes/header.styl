@import 'nib'

.navigation
  position absolute
  z-index 10
  margin 20px 10px
  a
    text-decoration none
    color #fff
    text-shadow 1px 1px 1px #000
    &:hover
      color #fff
      font-weight stronger
  //background: linear-gradient(right, #ddd, #fff)
  //box-shadow 2px 2px 2px 3px rgba(56, 56, 56, 0.1)

#login-buttons
    font-size 80%
    text-transform lowercase
    position absolute
    top 10px
    right 50px
    z-index 10
    a
      text-decoration none
      color #000
      text-shadow 0.5px 0.5px 0.5px #fff
      &:hover
        color #000

.searchForm
    .form-group
        margin-top 10px

.navigation a:hover, .active > a, .active > a:hover, .active > a:focus
    color: #555;
    background linear-gradient(right, rgba(219, 219, 219, 0.5), rgba(56, 56, 56, 0.3));

.editWrapper, .pageWrapper, #tagCloudTags
    margin-top 80px

.gallery
    margin-top 110px

.nav > li
    display inline-block

