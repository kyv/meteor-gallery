html, body
  font-family open_sansregular
  font-size 16px
  background-color rgba(131, 131, 131, 1)
  a
      color #fff

h1, h2
    text-transform capitalize

#main

    align-items center
    text-shadow 2px 2px 2px #000
    color #fff
    animation fadein ease-in-out 1s
    animation-fill-mode forwards

.glyphicon
    text-shadow 2px 2px 2px #000
    color #fff

.shadow
    box-shadow 2px 2px 2px 3px rgba(56, 56, 56, 0.1)

.fadeIn
    animation fadein ease-in-out 1s
    animation-fill-mode forwards

@keyframes fadein {
  from   {
    opacity 0
  }
  to {
    opacity 1
  }
}

@keyframes fadeout {
  from   {
    opacity 1
  }
  to {
    opacity 0
  }
}

.fadeInTextShadow
    animation textShadowOut ease-out 1s
    animation-fill-mode forwards
    &:hover
        animation textShadowIn ease-in 1s
        animation-fill-mode forwards

@keyframes textShadowIn {
  from   {
    box-shadow 2px 2px 2px 3px rgba(56, 56, 56, 0.1)
  }
  to {
    box-shadow 2px 2px 2px 3px rgba(56, 56, 56, 1)
  }
}

@keyframes textShadowOut {
  from   {
    box-shadow 2px 2px 2px 3px rgba(56, 56, 56, 1)
  }
  to {
    box-shadow 2px 2px 2px 3px rgba(56, 56, 56, 0.1)
  }
}
